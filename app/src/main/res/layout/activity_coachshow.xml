<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--标题栏-->
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <include layout="@layout/layout_title_bar"/>
    </LinearLayout>
    <!--黑线-->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000" />
    <!--标题栏以下-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#F1F1F1">
        <!--左侧-->
        <LinearLayout
            android:id="@+id/ll_leftcontent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center">
                <TextView
                    android:text="展示教练员信息"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:id="@+id/tv_showCoachInfo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/blue"/>
            </LinearLayout>



            <!--黑线-->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />

            <include layout="@layout/part_tvshowcoachinfo" />
            <!--黑线-->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
            <ListView
                android:id="@+id/lv_showCoachInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>
        <!--黑线-->
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />

        <!--右侧-->
        <LinearLayout
            android:id="@+id/ll_rightcontent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:text="添加教练员信息"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/tv_addCoachInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blue"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_coachName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="教练员姓名："
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <EditText
                        android:hint="请输入教练员姓名"
                        android:id="@+id/edt_coachName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_coachGroup"
                        android:text="教练员等级："
                        android:textSize="25sp"
                        android:textColor="@color/black"

                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:id="@+id/spinner_level"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/set_group_spinner"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_coachAge"
                        android:text="教练员年龄："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:id="@+id/spinner_age"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/set_group_spinner"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_coachHeight"
                        android:text="教练员身高："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:id="@+id/spinner_height"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/set_group_spinner"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_coachWeight"
                        android:text="教练员体重："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:id="@+id/spinner_weight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/set_group_spinner"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_coachGender"
                        android:text="教练员性别："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                    <RadioGroup
                        android:id="@+id/radiogroup_gender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:id="@+id/radiobtn_man"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="男"/>
                        <RadioButton
                            android:id="@+id/radiobtn_woman"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="女"/>
                    </RadioGroup>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_playMode"
                        android:text="剑种："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_gravity="center_vertical"/>
                    <RadioGroup
                        android:id="@+id/radiogroup_trainmode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/radiobtn_epee"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"

                            android:layout_weight="1"
                            android:text="重剑"/>
                        <RadioButton
                            android:id="@+id/radiobtn_foil"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"

                            android:layout_weight="1"
                            android:text="花剑"/>
                        <RadioButton
                            android:id="@+id/radiobtn_sabre"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"

                            android:text="佩剑"/>
                    </RadioGroup>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <Button
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="100dp"

                            android:id="@+id/btn_add"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:text="添加"
                            android:background="@color/blue"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
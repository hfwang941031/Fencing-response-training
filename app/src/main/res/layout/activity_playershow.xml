<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--标题栏-->
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <include layout="@layout/layout_title_bar"/>
    </LinearLayout>
    <!--黑线-->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000" />
    <!--标题栏以下-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#F1F1F1">
        <!--左侧-->
        <LinearLayout
            android:id="@+id/ll_leftcontent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center">
                <TextView
                    android:text="展示运动员信息"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:id="@+id/tv_showPlayerInfo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/blue"/>
            </LinearLayout>
            <!--黑线-->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />

            <!--黑线-->
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
            <ListView
                android:id="@+id/lv_showPlayerInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>
        <!--黑线-->
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />

        <!--右侧-->
        <LinearLayout
            android:id="@+id/ll_rightcontent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:text="添加运动员信息"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/tv_addPlayerInfo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blue"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_playerName"
                        android:text="运动员姓名："
                        android:textSize="25sp"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>

                    <EditText
                        android:hint="请输入运动员姓名"
                        android:id="@+id/edt_playerName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_playerGroup"
                        android:text="运动员组别："
                        android:textSize="25sp"
                        android:textColor="@color/black"

                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <EditText
                        android:hint="请输入运动员组别"
                        android:id="@+id/edt_playerGroup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_playerAge"
                        android:text="运动员年龄："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <Spinner
                        android:id="@+id/spinner_age"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_playerHeight"
                        android:text="运动员身高："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <Spinner
                        android:id="@+id/spinner_height"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_playerWeight"
                        android:text="运动员体重："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <Spinner
                        android:id="@+id/spinner_weight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_playerGender"
                        android:text="运动员性别："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <RadioGroup
                        android:id="@+id/radiogroup_gender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:id="@+id/radiobtn_man"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="男"/>
                        <RadioButton
                            android:id="@+id/radiobtn_woman"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="女"/>
                    </RadioGroup>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_playMode"
                        android:text="训练方式："
                        android:textColor="@color/black"

                        android:textSize="25sp"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <RadioGroup
                        android:id="@+id/radiogroup_trainmode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/radiobtn_epee"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"

                            android:layout_weight="1"
                            android:text="重剑"/>
                        <RadioButton
                            android:id="@+id/radiobtn_foil"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"

                            android:layout_weight="1"
                            android:text="花剑"/>
                        <RadioButton
                            android:id="@+id/radiobtn_sabre"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/black"

                            android:text="佩剑"/>
                    </RadioGroup>
                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <Button
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="100dp"

                            android:id="@+id/btn_add"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:text="添加"
                            android:background="@color/blue"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>